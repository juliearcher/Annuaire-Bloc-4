<Application x:Class="Annuaire_Bloc_4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Annuaire_Bloc_4"
			 xmlns:viewmodels="clr-namespace:Annuaire_Bloc_4.ViewModel"
			 xmlns:views="clr-namespace:Annuaire_Bloc_4.View">
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/styles.xaml" />
				<ResourceDictionary Source="Styles/common.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
				<views:HomeView/>
			</DataTemplate>
			<DataTemplate DataType="{x:Type viewmodels:SitesViewModel}">
				<views:SitesView/>
			</DataTemplate>
		</ResourceDictionary>
    </Application.Resources>
</Application>
